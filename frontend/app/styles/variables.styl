:global(:root)
	// Global
	--font-family: 'Source Sans Pro', sans-serif

	// Colors
	--brand-default: #F1F1F1
	--brand-primary: #5762D5
	--brand-success: #33F778
	--brand-warning: #F8AB37
	--brand-danger:  #F83747
	--brand-info: #379FF8
	--brand-text: #C7C7C7
	--brand-text-dark: #737980


	--table-rt-th-background-color: var(--brand-info)
	--table-rt-th-color: var(--brand-default)
	--table-rt-td-color: var(--brand-text-dark)
	--pagination-page-info-color: var(--brand-text-dark)

	// Sizes
	--navbar-height: 100px
	--navbar-padding: 50px;

	--section-padding: 30px;

	--font-size-base: 16px
	--break-desktop: 1024px

	--input-text-height: 40px
	--input-text-width: 220px
	--input-text-margin: 10px
	--input-border-radius: 2px
	--input-text-padding-left: 20px

	--button-height: 40px
	--button-width: 100px
	--button-border-radius: 2px
	--button-border: 1.5px solid var(--brand-default)
	--button-margin: 10px;

	--button-default-text-color: var(--brand-default)
	--button-default-border: 1.5px solid var(--brand-default)
	--button-default-font-weight: 700

	--table-th-border: 2px var(--brand-default) solid
	--table-td-border: 2px var(--brand-default) solid
	--table-title-rt-th-font-size: 18px
	--table-title-rt-td-font-size: 18px
	--table-rt-td-padding: 20px
	--table-rt-th-padding: 20px
	--pagination-margin-top: 20px
	--pagination-page-info-font-size: 17px
	--pagination-navigation-text-font-size: 20px;
